<% include ./partials/main %>

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/img/unsplash.jpg" class="logo">
      <h3 class="text-center">
        Account Register
      </h3>
      <% include ./partials/msg %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" value="<%= typeof name !='undefined' ? name: ''%>" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" value="<%= typeof email !='undefined' ? email: ''%>" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password"value="<%= typeof password !='undefined' ? password: ''%>" required>
        </div>
        <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" class="form-control" name="password2" value="<%= typeof password !='undefined' ? password: ''%>" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>