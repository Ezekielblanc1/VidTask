<% include ./partials/main %>



  <div class="container">
      <% ideas.forEach(idea => {%>
        <div class="card card-body mb-3">
          <h4><%= idea.title %></h4>
          <p><%= idea.details %></p>
          <a href="/ideas/edit/<%=idea.id%>" class="btn btn-dark btn-block mb-2">Edit idea</a>
          <form action="/ideas/<%=idea.id%>?_method=DELETE" method="POST">
            <input type="submit" class="btn btn-danger btn-block" value="Delete">
          </form>
        </div>
      <%})%>
      <%if(ideas.length === 0){%>
        <p>No ideas listed</p>
      <%}%>
    </div>

